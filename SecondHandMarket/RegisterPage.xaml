<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecondHandMarket.RegisterPage"
             Title="注册">
    <StackLayout Padding="30">
        <Entry x:Name="PhoneNumberEntry" Placeholder="手机号"/>
        <Button Text="获取验证码" Clicked="OnGetVerificationCodeClicked"/>
        <Entry x:Name="VerificationCodeEntry" Placeholder="验证码"/>
        <Entry x:Name="PasswordEntry" Placeholder="密码" IsPassword="True"/>
        <Button Text="确认" Clicked="OnRegisterClicked"/>
    </StackLayout>
</ContentPage>